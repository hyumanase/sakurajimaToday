<p style="color: green"><%= notice %></p>

<h1>投稿された桜島情報一覧</h1>

<div id="ideas">
  <% @ideas.each do |idea| %>

    <%= image_tag(idea.picture_url, width: '600px') if idea.picture.present? %>
    <p>
      <%= link_to "詳細", idea %>
    </p>
  <% end %>
</div>

<%= link_to "桜島情報を投稿する", new_idea_path %>
